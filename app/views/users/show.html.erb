<table class="profile" summary="Profile information">
  <tr>
    <td class= "main">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
      <% if @user.lists.any? %>
        <table class="lists" summary="User lists">
          <%= render @lists %>
        </table>
        <%= will_paginate @lists %>
      <% end %>
    </td>
    <td class= "sidebar round">
      <strong>Name</strong> <%= @user.name %><br />
      <strong>URL</strong> <%= link_to user_path(@user), @user %><br />
      <strong>Lists</strong> <%= @user.lists.count %><br />
      <strong><%= link_to "Create list", root_path %></strong> 
      
    </td>
  </tr>
</table>



 